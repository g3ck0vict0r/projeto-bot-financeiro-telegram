@bot.message_handler(commands=["lancargasto"])
def lancargasto(mensagem):
    categorias_lancamento = """
    Maravilha, em qual das categorias abaixo se encaixa esse gasto?
    /assinaturas
    /combustivel
    /cuidado_pessoal
    /farmacia
    /lazer
    /mercado
    /reserva_da_casa
    /suplementacao
    /uber
    /valordisponivel_ISA
    /valordisponivel_VICTOR
        """
    print (mensagem)
    bot.send_message(mensagem.chat.id,categorias_lancamento)
